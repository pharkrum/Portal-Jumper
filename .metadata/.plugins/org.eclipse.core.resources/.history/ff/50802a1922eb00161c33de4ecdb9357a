package com.redes.game;

import com.redes.game.entity.Entity;

public class Camera {
	public int x, y;
	
	public void tick(Entity player){
		setX(-player.getX()+Game.WIDTH);
		setY(-player.getY());
	}

	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}
	
	
}
